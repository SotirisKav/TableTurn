# E2E Test Environment Configuration
# Copy this file to .env and set your test values

# Base URL for testing (will be overridden in CI)
BASE_URL=http://localhost:3000

# Test user credentials (create these in your test database)
TEST_USER_EMAIL=test@restaurant.com
TEST_USER_PASSWORD=testpassword123

# Admin test credentials (for admin functionality tests)
TEST_ADMIN_EMAIL=admin@tableturn.com
TEST_ADMIN_PASSWORD=adminpassword123

# Test restaurant ID (use a restaurant that exists in your test data)
TEST_RESTAURANT_ID=1

# Database connection for test data setup (optional)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=tableturn_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# Test configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000

# CI/CD specific settings
CI=false
GITHUB_ACTIONS=false